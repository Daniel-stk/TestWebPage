@using RickAndMortyRestoreStore.Models.ViewModels
@model RequestToJobViewModel
<br />
<br />
<br />

<div class="container">
    <div class="row">
        <div class="col s12 m12 l12">
            <div class="card horizontal">
                <div class="card-image">
                    <img src="@Model.Request.RouteMedia">
                </div>
                <div class="card-stacked">
                    <div class="card-content">
                        <div class="row">
                            <div class="col s12 m12 l12">
                                <span class="label-tag">Sent by:</span><span class="content-tag">@Model.Request.UserName</span>
                            </div>
                            <div class="col s12 m12 l12">
                                <span class="label-tag">Summary:</span><span class="content-tag">@Model.Request.Description</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="row">
            <div class="col s12 m12 l12">
                <h5>Accept and take Rickquest</h5>
            </div>
        </div>
        <div class="row">
            @using (Html.BeginForm("RequestToJob","Administration",FormMethod.Post,new { role="form"}))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.Request.RequestId)
                <div class="input-field col s12 m12 l12">
                    @Html.TextBoxFor(m => m.JobField.Title)
                    @Html.LabelFor(m => m.JobField.Title)
                </div>
                <div class="input-field col s12 m12 l12">
                    @Html.TextBoxFor(m => m.JobField.Amount)
                    @Html.LabelFor(m => m.JobField.Amount)
                </div>
                <div class="input-field col s12 m12 l12">
                    @Html.TextAreaFor(m => m.JobField.Description, new { @class = "materialize-textarea" })
                    @Html.LabelFor(m => m.JobField.Description)
                </div>
                <div class="row right">
                    <button class="btn waves-effect waves-light black" type="submit" name="action">
                        Submit
                        <i class="material-icons right">send</i>
                    </button>
                </div>

            }
           </div>
    </div>
</div>
